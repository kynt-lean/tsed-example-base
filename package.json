{
  "name": "tsed-example-base",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "yarn run tsc && cp -r src/assets dist && cp -r src/app/views dist/app",
    "tsc": "tsc --project tsconfig.compile.json",
    "tsc:w": "tsc --project tsconfig.json -w",
    "start": "tsnd --inspect --ignore-watch node_modules --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "test": "yarn run test:lint && yarn run test:coverage",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:coverage": "yarn run test:unit",
    "typeorm": "tsed typeorm",
    "migrate:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -f ./src/config/typeorm/default.config.json -c default -n",
    "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create -f ./src/config/typeorm/default.config.json  -c default -n",
    "migrate:up": "ts-node ./node_modules/typeorm/cli.js migration:run -f ./src/config/typeorm/default.config.json -c default",
    "migrate:down": "ts-node ./node_modules/typeorm/cli.js migration:revert -f ./src/config/typeorm/default.config.json -c default"
  },
  "dependencies": {
    "@tsed/ajv": "^6.98.0",
    "@tsed/common": "^6.98.0",
    "@tsed/core": "^6.98.0",
    "@tsed/exceptions": "^6.98.0",
    "@tsed/json-mapper": "^6.98.0",
    "@tsed/passport": "^6.98.0",
    "@tsed/platform-express": "^6.98.0",
    "@tsed/schema": "^6.98.0",
    "@tsed/swagger": "^6.98.0",
    "@tsed/typeorm": "^6.98.0",
    "ajv": "^8.8.2",
    "body-parser": "^1.19.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "node-schedule": "^2.1.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "typeorm": "^0.2.41",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@tsed/cli-plugin-jest": "^3.16.0",
    "@tsed/cli-plugin-typeorm": "^3.16.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/method-override": "^0.0.32",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.7",
    "@types/node-schedule": "^1.3.2",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "jest": "^27.4.5",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "tsed": {
    "packageManager": "yarn",
    "convention": "default",
    "architecture": "default"
  }
}
